
@model List<Slide>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slides</h4>
                <p class="card-description">
           
                </p>
                <div class="table-responsive">
                    <a class="btn btn-success" asp-action="Create"> Create Slide</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Slide slide in Model)
                            {
                                count++;
                                
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                   <img src="~/assets/images/website-images/@slide.Image"/>
                                    </td>
                                    <td>
                                       @slide.Title
                                    </td>
                                    <td>
                                       @slide.Order
                                    </td>
                                    <td>
                                        <a asp-action="delete" asp-route-id="@slide.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="update" asp-route-id="@slide.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-account-card-details"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>