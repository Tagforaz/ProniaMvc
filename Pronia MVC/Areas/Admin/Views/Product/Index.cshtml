
@model PaginatedItemsVM<GetAdminProductVM>
@{
    int count = (Model.CurrentPage-1)*3;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <p class="card-description">
           
                </p>
                <div class="table-responsive">
                    @Html.Raw(TempData["ImageWarning"])
                    <a class="btn btn-success" asp-action="Create"> Create Product </a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>

                                <th>
                                    Category
                                </th>
                           
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(GetAdminProductVM productVM in Model.Items)
                            {
                                count++;
                                
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                   <img src="~/assets/images/website-images/@productVM.Image"/>
                                    </td>
                                    <td>
                                       @productVM.Name
                                    </td>
                                    <td>
                                       @productVM.Price
                                    </td>
                                    <td>
                                        <a asp-controller="category" asp-action="details" asp-route-id="@productVM.CategoryId"> @productVM.CategoryName</a>
                                    </td>
                                    <td>
                                        <a asp-action="delete" asp-route-id="@productVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="update" asp-route-id="@productVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="details" asp-route-id="@productVM.Id"  class="btn btn-primary"><i class="mdi mdi-account-card-details"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")" >
                                <a asp-action="index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i=1;i<=Model.TotalPage;i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")"><a class="page-link " asp-action="index" asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item  @(Model.CurrentPage == Model.TotalPage ? "disabled" : "")">
                                <a asp-action="index" asp-route-page="@(Model.CurrentPage+1)" class="page-link"  aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    </div>