@model List<GetCategoryVM>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category</h4>
                <p class="card-description">
                    
                </p>
                <div class="table-responsive">
                    <a class="btn btn-success" asp-action="Create">Create Category</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Product Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetCategoryVM categoryVM in Model)
                            {
                                count++;

                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                             
                                    <td>
                                        @categoryVM.Name
                                    </td>
                                    <td>
                                       @categoryVM.Products.Count
                                    </td>
                                    <td>
                                        <a class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="update" asp-route-id="@categoryVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="details" asp-route-id="@categoryVM.Id"  class="btn btn-primary"><i class="mdi mdi-account-card-details"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>