@model RegisterVM
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li> Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
              
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post" >
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" placeholder="Name" />
                                    <span class="text-danger"  asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" placeholder="Surname" />
                                    <span class="text-danger"  asp-validation-for="Surname"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label asp-for="UserName">UserName</label>
                                    <input asp-for="UserName" placeholder="UserName" />
                                    <span class="text-danger"  asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" placeholder="Email" />
                                    <span class="text-danger"  asp-validation-for="Email"></span>
                              </div>
                                <div class="col-md-6 colUser-12">
                                    <label asp-for="Birthday">Birthday</label>
                                    <input asp-for="Birthday" placeholder="Birthday" />
                                    <span class="text-danger" asp-validation-for="Birthday"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                    <input asp-for="PhoneNumber" placeholder="Phone Number" />
                                    <span class="text-danger"  asp-validation-for="PhoneNumber"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label asp-for="Photo">Profile Photo</label>
                                    <input asp-for="Photo" placeholder="Profile Photo" />
                                    <span class="text-danger"  asp-validation-for="Photo"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label>Gender</label>
                                    <div class="gender-options" style="display:flex; gap:15px; margin-top:5px; width: 50px;">
                                        <div class="form-check" style="display:flex; align-items:center;">
                                            <input style="margin-right:5px;width:16px;height:16px;" type="radio" asp-for="Gender" value="@((int)Gender.Female)" id="genderFemale" />
                                            <label class="form-check-label" for="genderFemale"> Female </label>
                                        </div>
                                        <div class="form-check" style="display:flex; align-items:center;">
                                            <input style="margin-right:5px;width:16px;height:16px;" type="radio" asp-for="Gender" value="@((int)Gender.Male)" id="genderMale" />
                                            <label class="form-check-label" for="genderMale"> Male </label>
                                        </div>
                              
                                    </div>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12 col-12">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>